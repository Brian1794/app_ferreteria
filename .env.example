# Configuración de entorno
# Copiar este archivo a .env y ajustar los valores según tu entorno

# Entorno de la aplicación (development, production, testing)
FLASK_ENV=development
FLASK_DEBUG=1

# Clave secreta para la aplicación
SECRET_KEY=clave-super-secreta-cambiar-en-produccion

# Configuración de base de datos
MYSQL_HOST=localhost
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DB=ferreteria
MYSQL_PORT=3306

# Configuración de correo electrónico
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=tu@email.com
MAIL_PASSWORD=tu-contraseña-segura
MAIL_DEFAULT_SENDER=tu@email.com

# Configuración de WhatsApp
WHATSAPP_API_URL=https://api.whatsapp.com/v1/
WHATSAPP_API_KEY=tu-api-key-de-whatsapp

# Configuración de depuración y registros
LOG_LEVEL=DEBUG

# URL base de la aplicación
BASE_URL=http://localhost:5000

# Límites y configuraciones
MAX_UPLOAD_SIZE=16777216  # 16MB en bytes
SESSION_LIFETIME_DAYS=7

# Configuración de respaldo
BACKUP_DIR=./backups 